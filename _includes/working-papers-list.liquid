{% for paper in site.working_papers | sort: 'paper_order' %}
  <div class="card my-3 p-3">
    <div class="card-body">
      <h3 class="card-title">{{ paper.title }}</h3>
      <p class="card-text text-muted">
        {% if paper.authors.size > 1 %}
          with 
        {% endif %}
        {% for author in paper.authors %}{{ author.name }}{% unless forloop.last %}, {% endunless %}{% endfor %}
      </p>
      
      <div class="abstract-content">{{ paper.content }}</div>

      <div>
        {% for link in paper.links %}
          <a href="{{ link.url }}" class="paper-link"><i class="{{ link.icon }}"></i> {{ link.name }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
{% endfor %}